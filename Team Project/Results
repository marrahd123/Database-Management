postgres=> SELECT c2.name as name, c1.lat as originLat, c1.lng as originLng, c2.lat as destLat, c2.lng as destLng, ST_DISTANCE(c1.geom, c2.geom) as distance
postgres-> FROM locations c1
postgres-> JOIN locations c2 on c1.id != c2.id
postgres-> WHERE c1.name = 'Taylor 205'
postgres-> ORDER BY distance
postgres-> LIMIT 3;
